<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_actor"
    android:layout_height="@dimen/height_actor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBestActor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/placeholder_actor"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_actor"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFav"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        app:srcCompat="@drawable/ic_baseline_favorite_white_24"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:tint="@color/colorAccent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLike"
        android:layout_width="@dimen/margin_medium_2"
        android:layout_height="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_baseline_thumb_up_white_24"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_card_medium_2"
        android:tint="@color/colorAccent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU LIKE 15 MOVIE"
        android:elevation="@dimen/margin_small"
        android:textStyle="bold"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_smaller"
        android:layout_toEndOf="@id/ivLike"
        android:layout_alignBottom="@id/ivLike"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_above="@id/ivLike" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ivLike"
        android:layout_alignStart="@id/ivLike"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Leonardo Di caprio"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/margin_card_medium_2"/>


</RelativeLayout>