<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_showcases"
    android:layout_height="@dimen/height_showcases"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_card_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShowcase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/placeholder_wolverine_image"
        android:scaleType="centerCrop"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ivBannerMoviewImage"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="@dimen/margin_xxlarge"
        android:layout_height="@dimen/margin_xxlarge"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="@dimen/margin_large"
        android:elevation="@dimen/margin_medium"
        app:icon="@drawable/ic_baseline_play_arrow_black_24"
        app:iconPadding="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowcaseMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold"
        android:elevation="@dimen/margin_medium"
        android:layout_alignStart="@id/tvShowcaseMovieDate"
        android:layout_above="@id/tvShowcaseMovieDate"
        android:layout_marginBottom="@dimen/margin_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowcaseMovieDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Dec 2016"
        android:elevation="@dimen/margin_medium"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGradientBackground"
        android:elevation="@dimen/margin_small"/>


</RelativeLayout>